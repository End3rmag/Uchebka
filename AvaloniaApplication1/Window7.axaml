<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvaloniaApplication1.Models"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="AvaloniaApplication1.Views.Window7"
        Title="Тарифы"
        WindowStartupLocation="CenterScreen"
		x:DataType="local:TarifViewModel">

	<Grid RowDefinitions="* 550 *" ColumnDefinitions="* 1050 *">
		<TextBlock Text="beлайк" FontSize="45"
                   VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

		<!-- Кнопка профиля вместо кнопки входа -->
		<Button Grid.Column="2" Background="Green" Content="Профиль"
                FontSize="20"
                Foreground="White" CornerRadius="20"
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Click="ProfileButton_Click">
		</Button>

		<ScrollViewer Grid.Column="1" Grid.Row="1" Background="AliceBlue"
                     Width="1050" Height="750" VerticalAlignment="Center">
			<ItemsControl x:Name="TarifsContainer">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<WrapPanel Orientation="Horizontal"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Top"
                                  Margin="20"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>

				<ItemsControl.ItemTemplate>
					<DataTemplate x:DataType="local:TarifViewModel">
						<Border Width="250" Height="300" Margin="15"
                               CornerRadius="10" Background="White"
                               BorderBrush="#e0e0e0" BorderThickness="1">
							<Button Background="Transparent" BorderThickness="0"
                                   Click="TarifCard_Click">
								<StackPanel Margin="15" Spacing="10">
									<TextBlock Text="{Binding Name}"
                                              FontSize="18" FontWeight="Bold"
                                              TextWrapping="Wrap"
                                              HorizontalAlignment="Center"/>

									<TextBlock Text="{Binding FormattedPrice}"
                                              FontSize="16" Foreground="Blue"
                                              HorizontalAlignment="Center"/>

									<Separator Background="#e0e0e0"/>

									<StackPanel Spacing="5">
										<TextBlock Text="{Binding FormattedInternet}"
                                                  HorizontalAlignment="Center"/>
										<TextBlock Text="{Binding FormattedMinutes}"
                                                  HorizontalAlignment="Center"/>
										<TextBlock Text="{Binding FormattedSms}"
                                                  HorizontalAlignment="Center"/>
									</StackPanel>

									<TextBlock Text="Подключить"
                                              FontSize="12" Foreground="Gray"
                                              HorizontalAlignment="Center"
                                              Margin="0,20,0,0"/>
								</StackPanel>
							</Button>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
	</Grid>
</Window>